// ************************************
// Badges
// ************************************

.badge
  display: inline-block
  font-size: 14px
  height: 18px
  line-height: 18px
  border-radius: 3px
  padding: 0 6px
  color: #fff
  white-space: nowrap

.badge--success
  background-color: #42b983

.badge--nette
  border: 1px solid $accentColor
  color: $accentColor

.badge--nette--30
  background-color: $accentColor
  color: #fff

.badge--php
  background-color: $accentColor
