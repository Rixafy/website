.btn
  display: inline-block
  margin-bottom: 0
  font-weight: 400
  text-align: center
  white-space: nowrap
  vertical-align: middle
  touch-action: manipulation
  cursor: pointer
  user-select: none
  background-image: none
  border: 1px solid transparent
  border-radius: 3px
  padding: 2px 5px
  line-height: 1em

.btn-success
  color: #fff
  background-color: #5cb85c
  border-color: #4cae4c

.btn-warning
  color: #fff
  background-color: #f0ad4e
  border-color: #eea236

.btn-xs
  padding: 1px 5px
  font-size: 12px
  line-height: 1.5
  border-radius: 3px

.text-left
  text-align: left

.text-right
  text-align: right

.metainfo
  padding-bottom: 1rem

.gbuttons
  display: flex
  flex-direction: row
  flex-wrap: wrap;
  list-style: none
  margin: 0
  padding: 0

  .button-group
    display: inline-flex
    flex-direction: row
    font-size: 0.8rem
    margin: 0.1rem
    .button-label
      background-color: #eff3f6
      background-image: linear-gradient(-180deg,#fafbfc,#eff3f6 90%)
      color: #24292e
      border: 1px solid rgba(27,31,35,.2)
      border-bottom-left-radius: 3px
      border-top-left-radius: 3px
      padding: 3px 10px
      vertical-align: middle
    .button-value
      background-color: #fff
      border: 1px solid rgba(27,31,35,.2)
      border-left: 0
      border-bottom-right-radius: 3px
      border-top-right-radius: 3px
      color: #24292e
      font-weight: 600
      padding: 3px 10px
      vertical-align: middle
    a
      color: #000
      &:hover
        color: #3c6fc0
        text-decoration: none

.theme-container.page-wide
  .content
    max-width: 900px

.badge
  display: inline-block
  font-size: 14px
  height: 18px
  line-height: 18px
  border-radius: 3px
  padding: 0 6px
  color: #fff
  white-space: nowrap

.badge--success
  background-color: #42b983

.badge--nette
  border: 1px solid $accentColor
  color: $accentColor

.badge--nette--30
  background-color: $accentColor
  color: #fff

.badge--php
  background-color: $accentColor

.text-center
  text-align: center

.text-left
  text-align: left

.text-right
  text-align: right

.row
  display: flex
  flex-wrap: wrap

.box-6
  width: 16%

.cfooter
  margin-top: 4em
  background: #222
  color: #606060
  padding: 30px 0
  .inner
    margin: 0 auto
    max-width: 960px
    width: 100%
  ul
    list-style-type: none
    margin: 0
    padding: 0
  a
    color: #bdbdbd
  strong
    font-weight: 800
  .highlight
    color: #4a4a4a
    font-size: 1.8125rem
    font-weight: 500
  .navigation
    margin-top: 15px
  .copy
    font-size: 0.8rem

.action-button
  display: inline-block
  font-size: 1.2rem
  color: #fff
  background-color: #3765af
  padding: .3rem 1rem
  border-radius: 4px
  transition: background-color .1s ease
  box-sizing: border-box
  border-bottom: 1px solid #315b9e
  &:hover
    background-color: #3f72c3

.action-button-2x
  padding: .4rem 1.6rem
  font-size: 1.4em
  font-weight: bold

.homepage
  .hero
    text-align: center
    *
      margin: 1rem auto
    h1
      font-size: 3rem
    .description
      max-width: 50rem
      font-size: 1.6rem
      line-height: 1.3
      color: #6a8bad

  .features
    border-top: 1px solid #eaecef
    padding: 1.2rem 0
    margin-top: 2.5rem
    display: flex
    flex-wrap: wrap
    align-items: flex-start
    align-content: stretch
    justify-content: space-between
  .feature
    flex-grow: 1
    flex-basis: 30%
    max-width: 30%
    h2
      border-bottom: 0
    p
      color: #4e6e8e

.explanation
  background: #ff251b1a;
  border: 10px solid #fff;
  padding: 1rem 2rem;
  position: relative;
  border-radius: 5px;

  .show
    float: right

  &::before
    content: "";
    position: absolute;
    top: -7px;
    left: -7px;
    right: -7px;
    bottom: -7px;
    border: 1px solid #ff261b;
    border-radius: 5px;
    pointer-events: none;

  &::after
    content: "Hey!";
    text-transform: uppercase;
    color: #fff;
    font-weight: 700;
    top: -14px;
    left: 1rem;
    background: #100e17;
    padding: 0 .5rem;
    font-size: .6rem;
    position: absolute;
    z-index: 1;

.explanation--hotness
  &::after
    content: "Hotness!"

@media only screen and (max-width: 960px)
  .cfooter
    padding: 30px

@media only screen and (max-width: 768px)
  .box-6
    width: 33%
  .explanation
    .show
      display: block
      float: none

@media only screen and (min-width: 1224px)
  .content:not(.custom)
    max-width: 1000px
