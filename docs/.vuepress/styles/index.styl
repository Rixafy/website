.btn
    display: inline-block
    margin-bottom: 0
    font-weight: 400
    text-align: center
    white-space: nowrap
    vertical-align: middle
    touch-action: manipulation
    cursor: pointer
    user-select: none
    background-image: none
    border: 1px solid transparent
    border-radius: 3px
    padding: 2px 5px
    line-height: 1em

.btn-success
    color: #fff
    background-color: #5cb85c
    border-color: #4cae4c

.btn-warning
    color: #fff
    background-color: #f0ad4e
    border-color: #eea236

.btn-xs
    padding: 1px 5px
    font-size: 12px
    line-height: 1.5
    border-radius: 3px

.text-left
    text-align: left

.text-right
    text-align: right

.metainfo
    display: flex
    flex-direction: row
    padding: 10px;
    background: #d3d3d35e;

    a
      margin: 0 2px

    div
      flex-grow: 1

.theme-container.page-wide
  .content
    max-width: 900px
